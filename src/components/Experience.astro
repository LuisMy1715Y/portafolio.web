import ExperienceItem from "./ExperienceItems.astro";

const EXPERIENCE = [
  {
    date: "Feb 2024 - Dic 2024",
    title: "Vendedor Profesional",
    company: "HomeCenter Sodimac Colombia",
    description:
      "Asesor de ventas en HomeCenter Sodimac Colombia, especializado en muebles. Ayudo a los clientes a elegir el mobiliario ideal para sus hogares, brindando asesoría en diseño, funcionalidad y presupuesto. Me encargo de ofrecer una atención personalizada, mantenerme al día con las tendencias y promociones, y asegurar que el proceso de compra sea satisfactorio, desde la selección del producto hasta la entrega.",
  },
  {
    date: "Jul 2021 — Jul 2022",
    title: "Desarrollador Frontend | React.js",
    company: "Transporte San Pedro Ltda",
    description:
      "Especializado en el desarrollo de interfaces optimizadas y procesos eficientes. Experiencia en la creación de aplicaciones web con React.js, mejorando la gestión de rutas y optimización logística. Desarrollo de interfaces dinámicas y responsivas para una mejor experiencia de usuario. Implementación de componentes reutilizables y mantenibles con React y CSS Modules. Uso de React Router para navegación fluida y consumo de APIs REST para automatización de procesos.",
  },
