import ExperienceItem from "./ExperienceItems.astro";

const EXPERIENCE = [
  {
    date: "May 2025 — Actualidad",
    title: "Especialista en Automatización y Soporte Técnico IA",
    company: "LucidBot",
    description:
      "Encargado del soporte técnico de la plataforma LucidBot, gestionando y resolviendo incidencias con apoyo de herramientas de inteligencia artificial. Responsable de la creación y optimización de prompts, diseño de flujos conversacionales e integración de procesos automatizados para mejorar la eficiencia operativa. Realizo configuraciones técnicas, validación de APIs y estructuras JSON, asegurando implementaciones estables y una experiencia fluida para los usuarios.",
  },
  {
    date: "Feb 2024 - Dic 2024",
