---
interface Props {
  company: string;
  date: string;
  image: string;
  link?: string;
}

const { image, link } = Astro.props;
---

<article class="rounded-lg hover:scale-105 transition duration-300 ease-in-out">
  <figure
    class="relative max-w-sm transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
  >
    <a href={link} target="_blank">
      <img class="rounded-lg" src={image} alt="image description" />
    </a>
  </figure>
</article>
